<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/ButtonLook</item>
        <item name="android:textColor">@color/colorAccentLight</item>
        <!--<item name="android:background">@color/colorPrimary</item>
        <item name="android:toolbarStyle">@style/ToolbarLook</item>-->


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="ButtonLook">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>
    
    
    
    
    

    <style name="ToolbarLook">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>

    <style name="ToolbarPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>

    <style name="OverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
        <item name="android:tint">@color/colorAccentLight</item>
    </style>



</resources>
